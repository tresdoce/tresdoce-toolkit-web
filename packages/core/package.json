{
  "name": "@tresdoce-toolkit/core",
  "version": "1.0.0",
  "scripts": {
    "clean": "rimraf pkg",
    "publish": "pika publish",
    "build": "npm run clean && pika build",
    "lint": "eslint --fix --ext .ts,.tsx,.js src",
    "lint-staged": "lint-staged",
    "test": "jest",
    "coverage": "jest --coverage",
    "version": "npm run build"
  },
  "author": "TresDoce",
  "publishConfig": {
    "registry": "http://143.198.236.101:8081/repository/npm-private/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TresDoce/tresdoce-toolkit-web.git"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "**/*.test.*",
            "**/__snapshots/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-web",
        {
          "exclude": [
            "**/*.test.*",
            "**/__snapshots/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node",
        {
          "exclude": [
            "**/*.test.*",
            "**/__snapshots/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-types"
      ]
    ]
  },
  "devDependencies": {
    "@tresdoce-toolkit/babel-config": "^1.0.0",
    "@tresdoce-toolkit/eslint-config": "^1.0.0",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.6.0",
    "@pika/plugin-build-types": "^0.6.0",
    "@pika/plugin-build-web": "^0.6.0",
    "@pika/plugin-standard-pkg": "^0.6.0",
    "@testing-library/jest-dom": "^4.0.0",
    "@testing-library/react": "^8.0.5",
    "@types/jest": "^24.0.14",
    "@types/jquery": "^3.3.31",
    "@types/memoize-one": "^4.1.1",
    "@types/reach__router": "^1.2.4",
    "@types/react": "^16.8",
    "axios-mock-adapter": "^1.17.0",
    "babel-plugin-idx": "^2.4.0",
    "eslint": "^6.3.0",
    "idx": "^2.5.6",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.0",
    "prettier": "^1.18.2",
    "react": "^16.8",
    "react-dom": "^16.8.5",
    "ts-jest": "^24.0.2",
    "tslib": "^1.9.3",
    "typescript": "^3.5.3"
  },
  "peerDependencies": {
    "react": "^16.8",
    "react-dom": "^16.8.5"
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts,tsx}": [
      "eslint --fix --ext .ts,.tsx,.js",
      "git add"
    ]
  },
  "dependencies": {
    "@reach/router": "^1.2.1",
    "axios": "^0.18.0",
    "currency.js": "^1.2.2",
    "date-fns": "^2.0.0-alpha.36",
    "deepmerge": "^4.0.0",
    "js-cookie": "^2.2.1",
    "ls-cache": "^0.2.3",
    "memoize-one": "^5.0.5",
    "path-to-regexp": "^3.1.0"
  },
  "eslintConfig": {
    "extends": "@tresdoce-toolkit"
  }
}
